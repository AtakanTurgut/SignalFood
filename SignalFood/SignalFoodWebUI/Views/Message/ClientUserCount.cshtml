
@{
    Layout = null;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadPartialComponent")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarPartialComponent")
    <!-- food section -->

    <section class="food_section layout_padding">
        <div class="container">

            <script type="text/javascript">
                $(document).ready(() => {
                    var connection = new signalR.HubConnectionBuilder()
                        .withUrl("https://localhost:7116/SignalRHub").build();
                    $("#connstatus").text(connection.state);

                    connection.start().then(() => {
                        $("#connstatus").text(connection.state);
                    }).catch((err) => { console.log(err) });

                    connection.on("ReceiveClientCount", (value) => {
                        console.log(value)
                        $("#clientcount").text(value);
                    });
                });
            </script>

            <h4 class="page-title">Anlık Client Sayısı : <strong id="clientcount"></strong></h4>

        </div>

    </section>

    <!-- end food section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")

    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")

</body>

</html>
