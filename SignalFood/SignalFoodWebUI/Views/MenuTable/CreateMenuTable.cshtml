@model CreateMenuTableDto

@{
    ViewData["Title"] = "CreateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Masa Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="MenuTableName">Masa Numarası</label>
                                <input type="text" class="form-control" asp-for="TableNumber" id="TableNumber">
                            </div>
                        </div>
                        <div class="card-action">
                            <a asp-controller="MenuTable" asp-action="Index" class="btn btn-primary">Liste</a>
                            <button class="btn btn-success">Masa Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

