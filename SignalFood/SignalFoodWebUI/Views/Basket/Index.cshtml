@model List<ResultBasketDto>
@{
    Layout = null;
    int count = 0;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadPartialComponent")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarPartialComponent")
    <!-- food section -->

    <br />
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30">
                    <a class="breadcrumb-item text-white" asp-controller="Default" asp-action="Index">
                        Ana Sayfa
                    </a>
                    <a class="breadcrumb-item text-white" asp-controller="Menu" asp-action="Index">
                        Menü
                    </a>
                    <span class="breadcrumb-item active"> Sepetiniz</span>
                </nav>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Topla</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tbody class="align-middle">
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle">@item.ProductName</td>
                                <td class="align-middle">@item.Count</td>
                                <td class="align-middle">@item.Price</td>
                                <td class="align-middle">@item.TotalPrice</td>
                                <td class="align-middle btn-delete">
                                    <button data-basketid="@item.BasketId" id="btndeletebasketid" 
                                        class="btn btn-sm btn-danger">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </td>

                            </tr>
                        </tbody>
                    }
                </table>
            </div>
            <div class="col-lg-4">
                <form>
                    <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-2 p-4" placeholder="Kupon Kodunuz"/>
                        <div>
                            <a style="height:48px; padding-top:11px; margin-left:5px" class="btn btn-warning" id="btncouponcode">Kuponu Uygula</a>
                        </div>
                    </div>
                </form>

                <br class="pt-2" />

                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-white pr-3"> Sepet Özeti </span>
                </h5>
                <div class="bg-white p-30 mb-5">
                    <div id="container" class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Toplam Tutar</h6>
                            <h6><span id="totalprice"> 250 </span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">KDV Oranı</h6>
                            <h6 id="kdv" class="font-weigh-medium"> 20 ₺</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Toplam Tutar</h5>
                            <h5><span id="totalpricewithkdv"> 270 </span>₺</h5>
                        </div>
                        <br />
                        <button id="btnchecked" class="btn btn-block btn-success font-weight-bold my-3">Siparişi Tamamla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end food section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterPartialComponent")

    @await Component.InvokeAsync("_UILayoutScriptPartialComponent")
</body>

</html>
