@model List<ResultContactDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgisi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgisi Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana sayfa bütünlüğü için listede sadece bir tane İletişim Alanı olması gerekmektedir!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactId</td>
										<td>@item.Location</td>
										<td>@item.FooterDescription</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-info">Güncelle</a></td>
										<td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-primary">İletişim Bilgisi Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

