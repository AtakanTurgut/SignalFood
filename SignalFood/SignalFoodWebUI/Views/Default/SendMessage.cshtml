@model CreateMessageDto

<section class="book_section about_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Bizimle İletişime Geçin
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="img-box">
                    <img src="~/feane-1.0.0/images/o1.jpg" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-controller="Default" asp-action="SendMessage" method="post">
                        <div>
                            <input type="text" class="form-control" placeholder="Adınız Soyadınız" asp-for="NameSurname" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Konu" asp-for="MessageSubject" />
                        </div>
                        <div>
                            <textarea asp-for="MessageContent" rows="10" placeholder="Mesajınızı buraya yazabilirsiniz." class="form-control"></textarea>
                        </div>
                        <div class="btn_box">
                            <button>
                                Mesajı Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>