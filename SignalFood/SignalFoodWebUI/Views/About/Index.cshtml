@model List<ResultAboutDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkında İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkında</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana sayfa bütünlüğü için listede sadece bir tane Hakkında Yazısı olması gerekmektedir!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info">Güncelle</a></td>
										<td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="About" asp-action="CreateAbout" class="btn btn-primary">Hakkında Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

