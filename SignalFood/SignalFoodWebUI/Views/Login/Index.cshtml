@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalFood Giriş</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/feane-1.0.0/images/o1.jpg" alt="form" style="width:484; height:650px" />
			</div>
			<form class="form-detail" method="post">
				<h2>SignalFood Giriş</h2>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="Username" required>
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>
				<div class="form-row-last">
					<button class="register">Giriş Yap</button>
				</div>
				<div class="form-row-last">
					<a asp-controller="Register" asp-action="Index">Hesap Oluştur</a>
				</div>
			</form>
		</div>
	</div>
</body>
</html>