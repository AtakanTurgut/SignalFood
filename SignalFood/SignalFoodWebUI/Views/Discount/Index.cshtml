@model List<ResultDiscountDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günlük İndirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Günlük İndirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana sayfa bütünlüğü için listede sadece iki tane İndirim olması gerekmektedir!
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">Açıklama</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durumu</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.Amount</td>
										<td>İndirim Aktif</td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-info">Güncelle</a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Discount" asp-action="CreateDiscount" class="btn btn-primary">İndirim Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

