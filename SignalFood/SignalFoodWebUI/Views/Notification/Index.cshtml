@model List<ResultNotificationDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Tür</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Okundu İşaretle</th>
									<th scope="col">Okunmadı İşaretle</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Sil</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationId</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td>@item.Type</td>
										<td>@item.Icon</td>
										<td><a href="/Notification/NotificationStatusChangeToTrue/@item.NotificationId" class="btn btn-success">Okundu</a></td>
										<td><a href="/Notification/NotificationStatusChangeToFalse/@item.NotificationId" class="btn btn-warning">Okunmadı</a></td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationId" class="btn btn-info">Güncelle</a></td>
										<td><a href="/Notification/DeleteNotification/@item.NotificationId" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Notification" asp-action="CreateNotification" class="btn btn-primary">Bildirim Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

