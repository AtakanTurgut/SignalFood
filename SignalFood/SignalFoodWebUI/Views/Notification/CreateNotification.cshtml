@model CreateNotificationDto

@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="NotificationName">Bildirim Türü</label>
                                <input type="text" class="form-control" asp-for="Type" id="Type">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="NotificationName">Bildirim İkonu</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="NotificationName">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <a asp-controller="Notification" asp-action="Index" class="btn btn-primary">Liste</a>
                            <button class="btn btn-success">Bildirim Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

