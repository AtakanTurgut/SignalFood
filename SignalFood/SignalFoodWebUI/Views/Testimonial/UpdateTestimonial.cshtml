@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorumları İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Müşteri Yorumu Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="TestimonialId"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="TestimonialName">Müşteri Adı Soyadı</label>
                                <input type="text" class="form-control" asp-for="TestimonialName" id="TestimonialName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Müşteri Ünvanı</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Commend">Müşteri Yorumu</label>
                                <textarea rows="5" class="form-control" asp-for="Commend" id="Commend"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Müşterinin Görsel Adresi</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-action">
                            <a asp-controller="Testimonial" asp-action="Index" class="btn btn-primary">Liste</a>
                            <button class="btn btn-success">Yorum Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

