@model List<ResultFeatureDto>
@{
    int count = 0;
}

<section class="slider_section ">
    <div id="customCarousel1" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container ">
                    <div class="row">
                        <div class="col-md-7 col-lg-6 ">
                            <div class="detail-box">
                                <h1>
                                    SignalFood
                                </h1>
                                <p>
                                    SignalFood, damak zevkinize hitap eden çeşitli lezzetlerle dolu bir restoran deneyimi sunuyor. Herkesin favorisi olan hamburgerlerden, nefis pizzalara; sağlıklı ve taze salatalardan, tatlı krizlerinizi gideren atıştırmalıklara kadar geniş bir menü yelpazesine sahibiz.
                                </p>
                                <div class="btn-box">
                                    <a asp-controller="Menu" asp-action="Index" class="btn1">
                                        Sipariş Ver
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {
                count++;    @* 1 2 3 ...*@
                <div class="carousel-item">
                    <div class="container ">
                        <div class="row">
                            <div class="col-md-7 col-lg-6 ">
                                <div class="detail-box">
                                    <h1>
                                        @item.Title
                                    </h1>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="btn-box">
                                        <a asp-controller="Menu" asp-action="Index" class="btn1">
                                            Sipariş Ver
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }       
        </div>
        <div class="container">
            <ol class="carousel-indicators">
                <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
                @for (int i = 1; i <= count; i++)
                {
                    <li data-target="#customCarousel1" data-slide-to="@i"></li>
                }
            </ol>
        </div>
    </div>
</section>
</div>