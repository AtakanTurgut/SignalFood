@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalFood Kayıt Ol</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib-regform-32/css/style.css"/>
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
                <img src="~/feane-1.0.0/images/o1.jpg" alt="form" style="width:484; height:650px"/>
			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı</h2>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Adınız" asp-for="Name" required>
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Soyadınız" asp-for="Surname" required>
				</div>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="Username" required>
				</div>
				<div class="form-row">
					<input type="text" id="your-email" class="input-text" placeholder="Email Adresiniz" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>
				<div class="form-row-last">
					<button class="register">Kayıt Ol</button>
				</div>
				<div class="form-row-last">
					<a asp-controller="Login" asp-action="Index">Giriş Yap</a>
				</div>
			</form>
		</div>
	</div>
</body>
</html>